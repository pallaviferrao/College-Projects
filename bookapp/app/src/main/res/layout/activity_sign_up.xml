<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.comp107x.bookapp2.SignUp"

   >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_above="@+id/password1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:hint="USER NAME"
        android:textColor="@color/abc_search_url_text_selected" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email1"

        android:layout_marginTop="149dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:inputType="textEmailAddress"
        android:hint="EMAIL:"
        android:textColor="@color/abc_search_url_text_selected" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password1"
        android:layout_below="@+id/email1"
        android:layout_alignParentStart="true"
        android:hint="PASSWORD:"
        android:textColor="@color/abc_search_url_text_selected"
        android:inputType="textPassword"/>

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN ME UP"
        android:id="@+id/textView2"
        android:textSize="40sp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/re_password1"
        android:layout_below="@+id/password1"
        android:layout_centerHorizontal="true"
        android:hint="CONFIRM PASSWORD"
        android:inputType="textPassword"
        android:textColor="@color/abc_search_url_text_selected" />



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/signup"
        android:layout_below="@+id/re_password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:onClick="onClick"
        android:background="@drawable/buttobshape" />
</RelativeLayout>
